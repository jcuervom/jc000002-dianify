#!/usr/bin/env bash
echo "-----> Post-compile script: Verifying Playwright setup..."

# The Playwright buildpack should have already installed browsers
# But let's make sure we have them
if [ ! -d "/app/browsers" ]; then
    echo "-----> Installing Playwright browsers..."
    python -m playwright install chromium
else
    echo "-----> Playwright browsers already available"
fi

echo "-----> Post-compile script complete"
